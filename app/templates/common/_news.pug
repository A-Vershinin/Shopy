section.news
  .container
    .news__left
      .news__title NEWS LETTER
      .news__desc join us now to get all news and special offers
    .news__right
      form.news__form
        .news__form-group
          i.news__form-icon
            svg(width="18", height="18")
              use(xlink:href="img/svg-sprite.svg#icon-envelope")
          .news__form-input
            input(type="email", name="email", id="email-field", placeholder="type your email here")
            label(for="email-field").news__form-label
          button(type="sumbit").btn.news__form-btn join us
